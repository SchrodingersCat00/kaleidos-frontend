<div class="vlc-toolbar">
  <div class="vlc-toolbar__left">
    <div class="vlc-toolbar__item">
      <button
        type="button"
        class="vl-button vl-button--link vl-button--narrow"
        {{action "cancelAction"}}
      >
        {{cancelButtonText}}
      </button>
    </div>
  </div>
  <div class="vlc-toolbar__right">
    <div class="vlc-toolbar__item">
      {{#if (not isLoading)}}
        <button class="vl-button vl-button--narrow" {{action "saveAction"}}>
          {{saveButtonText}}
        </button>
      {{else}}
        <button
          class="vl-button vl-button--loading vl-button--narrow"
          disabled="true"
        >
          {{loadingText}}
        </button>
      {{/if}}
    </div>
  </div>
</div>