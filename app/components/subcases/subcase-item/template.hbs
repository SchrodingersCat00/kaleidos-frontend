<div class="vlc-procedure-step__badge-wrapper">
  {{#if (await subcase.decision.approved)}}
    <div
      class="vl-badge vl-badge--icon vl-badge--success vlc-procedure-step__badge vl-badge--alt vl-badge--small-medium vl-icon-wrapper"
    >
      <i class="vl-badge__icon vl-vi vl-vi-check" aria-hidden="true"></i>
    </div>
  {{else}}
    <div
      class="vl-badge vl-badge--icon vl-badge--warning vlc-procedure-step__badge vl-badge--medium vl-badge--small-medium"
    >
      <i class="vl-badge__icon vl-vi vl-vi-sitemap" aria-hidden="true"></i>
    </div>
  {{/if}}
</div>
<div class="vlc-toolbar vlc-toolbar--auto">
  <div class="vlc-toolbar__left">
    <div class="vlc-toolbar__item">
      <div class="vl-u-spacer-extended-bottom-s">
        {{#if (or isAdmin isEditor)}}
          {{#link-to
            "cases.case.subcases.subcase"
            subcase.id
            class="vl-title vl-title--h6 max-width"
          }}
            {{subcase.nameToShow}} 
          {{/link-to}}
        {{else}}
          <h6 class="vl-title vl-title--h6 max-width">
            {{t "in-function-of"}}
            {{await subcase.subcaseName}}
          </h6>
        {{/if}}
      </div>
      <div class="vlc-procedure-step__meta">
        <p>
          {{t "latest-modified"}}
          {{moment-format (await subcase.modified) "DD.MM.YYYY"}}
        </p>
        {{#if (await subcase.onAgendaInfo)}}
          <p>
            {{t "on-agenda"}}
            {{moment-format (await subcase.onAgendaInfo) "DD.MM.YYYY"}}
          </p>
        {{/if}}
      </div>
      <ul class="vlc-status-timeline">
        {{#each (await subcase.sortedPhases) as |phase|}}
          {{#if (await phase.code.label)}}
            <li
              class="vlc-status-timeline__item vlc-status-timeline__item--neutral"
            >
              <div class="vlc-status-timeline__dot"></div>
              <div class="vlc-status-timeline__text">
                {{subcase-timeline-item-text
                  label=(await phase.code.label)
                  phase=phase
                  subcase=subcase
                }}
              </div>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
{{yield}}