{{ember-kaleidos-webuniversum/vl-uploaded-document
  name=model.filenameWithoutExtension
  extension=model.extension
  size=model.size
  downloadLink=model.downloadLink
  downloadName=model.filename
  delete=(action "promptDelete")
  class="vlc-document-card"}}
{{#if showDeleteWarning}}
  {{web-components/vl-modal-verify
    title="Bestand verwijderen"
    isLoading=isLoading
    buttonType="danger"
    verifyButtonText="Doorgaan"
    message=removalWarningText
    cancel=(action "cancelDelete")
    verify=(action "confirmDelete")
  }}
{{/if}}
