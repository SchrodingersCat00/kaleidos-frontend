
{{#if agendaitem}}
<div class="vl-u-spacer--large vl-u-spacer-extended-top-l">
  <div class="vl-u-spacer">
    <div class="vl-u-spacer--small">
      <div class="vl-u-display-flex vl-u-display-flex-align-center">
        <h2 class="vl-u-text--uppercase vl-u-text--bold">
          {{await agendaitem.subcase.case.type.label}}
        </h2>
      </div>
      <div class="vl-u-spacer-extended-left-s">
        {{#link-to
          "cases.case.subcases"
          agendaitem.subcase.case.id
          class="vl-link"
        }}
          {{t "to-subcase"}}
        {{/link-to}}
      </div>
    </div>
    <h3 class="vl-title vl-title--h3">
      {{agendaitem.subcase.shortTitle}}
    </h3>
    <p class="vl-long-title">
      {{agendaitem.subcase.title}}
    </p>
  </div>
</div>
<div class="vl-u-spacer">
  <div class="vl-u-display-flex vl-u-flex-space-between">
    <span class="vl-u-text--small vl-u-text--muted">
      {{agendaitem.subcase.shortTitle}}
    </span>
    <div class="vl-u-display-flex default">
      <i class="vl-vi vl-vi-check-small" aria-hidden="true"></i>
      <span class="vl-agenda-item__meta">
        {{#if agendaitem.formallyOk}}
          {{t "agenndaitem-details.formal-ok"}}
        {{else}}
          {{t "agendaitem-details.formal-nok"}}
        {{/if}}
      </span>
    </div>
  </div>
</div>
{{agenda/agendaitem/agendaitem-case/subcase-themes subcase=(await agendaitem.subcase)}}
{{agenda/agendaitem/agendaitem-case/subcase-mandatees subcase=(await agendaitem.subcase)}}
{{agenda/agendaitem/agendaitem-case/subcase-documents subcase=(await agendaitem.subcase)}}
{{else}}
  <div class="vl-u-spacer--large vl-u-spacer-extended-top-l">
  <div class="vl-u-spacer">
    <div class="vl-u-spacer--small">
      <div class="vl-u-display-flex vl-u-display-flex-align-center">
        <h2 class="vl-u-text--uppercase vl-u-text--bold">
          {{await subcase.case.type.label}}
        </h2>
      </div>
    </div>
    <h3 class="vl-title vl-title--h3">
      {{subcase.shortTitle}}
    </h3>
    <p class="vl-long-title">
      {{subcase.title}}
    </p>
  </div>
</div>
<div class="vl-u-spacer">
  <div class="vl-u-display-flex vl-u-flex-space-between">
    <span class="vl-u-text--small vl-u-text--muted">
      {{subcase.shortTitle}}
    </span>
  </div>
</div>
{{agenda/agendaitem/agendaitem-case/subcase-themes subcase=subcase}}
{{agenda/agendaitem/agendaitem-case/subcase-mandatees subcase=subcase}}
{{agenda/agendaitem/agendaitem-case/subcase-documents subcase=subcase}}
{{/if}}