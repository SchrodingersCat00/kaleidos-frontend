<div class="vl-u-spacer">
  <div class="vl-u-display-flex vl-u-display-flex-align-center">
    <h4 class="vl-title vl-title--h4">
      {{t "ise-code"}}
    </h4>
  </div>
</div>
{{#if (gt (await item.iseCodes.length) 0)}}
  <div class="vl-custom">
    <ul>
      {{#each (await item.iseCodes) as |iseCode|}}
        <li class="vl-pill vl-u-spacer-extended-right-s">
          {{iseCode.name}}
          ({{iseCode.code}})
        </li>
      {{/each}}
    </ul>
  </div>
{{else}}
  <div class="vl-u-spacer-extended-top-s">
    {{web-components/vl-alert message=(t "no-ise-codes-yet")}}
  </div>
{{/if}}