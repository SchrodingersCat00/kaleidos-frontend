{{#if (and (await item.subcase.case.id) isEditor)}}
  <div class="vl-u-spacer-extended-bottom-s">
    <div class="vl-u-display-flex vl-u-flex-align-baseline">
      {{#link-to
        "cases.case.subcases.subcase.overview"
        (await item.subcase.case.id)
        (await item.subcase.id)
        class="vl-link"
      }}
        {{t "to-subcase"}}
      {{/link-to}}
    </div>
  </div>
{{/if}}
<div class="vl-u-spacer-extended-bottom-s">
  <div class="vl-u-display-flex vl-u-display-flex-align-center">
    <div class="vlc-subline">
      <h2 class="vlc-subline">
        {{#if (not item.showAsRemark)}}
          {{t "note"}}
        {{else}}
          {{t "text"}}
        {{/if}}
      </h2>
    </div>      
    {{#if isEditor}}
      <div class="vl-u-spacer-extended-left-s">
        <a class="vl-link" {{action "toggleIsEditing"}}>
          {{t "edit"}}
        </a>
      </div>
    {{/if}}
  </div>
</div>
<div class="vl-u-spacer-extended-bottom-s">
  <h4 class="vl-title vl-title--h4">
    <pre>{{await item.shortTitle}}</pre>
  </h4>
</div>
<div class="vl-u-spacer-extended-bottom-s">
  {{#if (await shouldShowDetails)}}
    <pre class="no-capitalize">
      {{await item.title}}
    </pre>
  {{/if}}
</div>
{{#if (not item.showAsRemark)}}
  <div class="vl-u-spacer-extended-bottom-s">
    <div class="pill-container">
      {{#if (await item.subcase)}}
        {{#if (await item.subcase.approved)}}
          <span class="vl-pill vl-pill--success vl-u-text--capitalize">
            {{await item.subcase.subcaseName}}
          </span>
        {{else}}
          <span class="vl-pill vl-u-text--capitalize">
            {{await item.subcase.subcaseName}}
          </span>
        {{/if}}
      {{else if (await item.approved)}}
        <span class="vl-pill vl-pill--success vl-u-text--capitalize">
          {{await item.subcaseName}}
        </span>
      {{else}}
        <span class="vl-pill vl-u-text--capitalize">
          {{await item.subcaseName}}
        </span>
      {{/if}}
      {{#if isAgendaItem}}
        {{#if (and isEditor (await item.formallyOkToShow))}}
          <span class="{{item.formallyOkToShow.pillClassNames}}">
            {{item.formallyOkToShow.label}}
          </span>
        {{/if}}
      {{/if}}
    </div>
  </div>
  <div class="vl-u-spacer-extended-bottom-s">
    <div class="pill-container vl-u-display-flex">
      {{#if isEditor}}
        {{#if (await confidential)}}
          <span
            class="vlc-pill vl-icon vlc-pill--error vl-vi vl-vi-lock"
          ></span>
        {{else}}
          <span
            class="vlc-pill vl-u-spacer-extended-right-s vl-icon vlc-pill--success vl-vi vl-vi-lock-unlock"
          ></span>
        {{/if}}
      {{/if}}
      {{#if (not (await confidential))}}
        {{access-level-pill accessLevel=accessLevel}}
      {{/if}}
    </div>
  </div>
{{/if}}