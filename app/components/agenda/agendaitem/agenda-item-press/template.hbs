{{#if (not isEditing)}}
  <div class="vl-u-spacer">
    <div class="vl-u-display-flex vl-u-flex-space-between">
      <h3 class="vl-title vl-title--h3">
        {{t "agendaitem-details.preparation-text"}}
      </h3>
      {{#if isAdmin}}
      <div class="vl-u-spacer-extended-left-s">
        <a class="vl-link" {{action "toggleIsEditing"}}>
          {{t "buttons.edit"}}
        </a>
      </div>
      {{/if}}
    </div>
  </div>
  <div class="vl-u-spacer vl-typography">
    <h3 class="vl-title vl-title--h3">
      {{agendaitem.titlePress}}
    </h3>
    <p>
      {{agendaitem.textPress}}
    </p>
  </div>
  <hr />
    <div class="vl-u-spacer-extended-top-s">
      {{#if agendaitem.forPress}}
        <div class="vlc-pill vlc-pill--success">
          {{t "public-press"}}
        </div>
      {{else}}
        <div class="vlc-pill vlc-pill--warning">
          {{t "not-public-press"}}
        </div>
      {{/if}}
    </div>
{{else}}
  {{agendaitem-press-edit agendaitem=agendaitem isEditing=isEditing}}
{{/if}}