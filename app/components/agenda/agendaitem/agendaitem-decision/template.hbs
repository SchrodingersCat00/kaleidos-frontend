{{#if (not (is-pending (await item)))}}
  {{#if (not isEditing)}}
    <div class="vl-u-spacer vl-typography vl-form__group vl-u-bg-porcelain">
      <div class="vl-u-display-flex align-right">
        <h4 class="vl-title vl-title--h6">
          {{await decision.title}}
        </h4>
        {{#if (or isAdmin isEditor)}}
          <a class="vl-link" {{action "toggleIsEditing"}}>
            {{t "edit"}}
          </a>
          <button class="vl-button vl-button--link vl-button--icon">
            <i class="vl-button__icon vl-vi vl-vi-nav-show-more-horizontal"></i>
            {{#attach-popover
              class="ember-attacher-popper"
              hideOn="clickout click"
              showOn="click"
              animation="shift"
              placement="bottom" as |attacher|
            }}
              <ul class="vl-popover__link-list">
                <li class="vl-popover__link-list__item">
                  <button
                    class="vl-link color-red"
                    {{action attacher.hide}}
                    {{action "deleteDecision" decision}}
                  >
                    {{t "delete-decision"}}
                  </button>
                </li>
              </ul>
            {{/attach-popover}}
          </button>
        {{/if}}
      </div>
      <p>
        {{await decision.description}}
      </p>
      <hr />
      <div class="vl-u-spacer-extended-top-s">
        {{#if (await decision.approved)}}
          <div class="vlc-pill vlc-pill--success">
            {{t "decided"}}
          </div>
        {{else}}
          <div class="vlc-pill vlc-pill--warning">
            {{t "not-decided"}}
          </div>
        {{/if}}
      </div>
    </div>
    {{#if (or isEditor isAdmin)}}
      {{#if (gt (await decision.documentVersions.length) 0)}}
        <div class="vl-u-spacer">
          <h4 class="vl-title vl-title--h6">
            {{t "documents-attached-to"}}
          </h4>
          <div class="vl-u-spacer-extended-top-s">
            {{utils/documents-list-for-item item=item agendaitem=subcase}}
          </div>
        </div>
      {{/if}}
      {{utils/add-signed-documents
        item=decision
        modelToAddDocumentVersionTo="signedDecision"
        title=(t "signed-decision-add")
      }}
    {{/if}}
  {{else}}
    {{agenda/agendaitem/agendaitem-decision-edit
      isEditing=isEditing
      item=decision
      subcase=subcase
      agendaitem=agendaitem
    }}
  {{/if}}
{{/if}}
{{#if isVerifyingDelete}}
  {{web-components/vl-modal-verify
    title=(t "delete-decision")
    message=(t "delete-decision-message")
    cancel=(action "cancel")
    verify=(action "verify")
  }}
{{/if}}