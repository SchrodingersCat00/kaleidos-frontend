{{#if (not isEditing)}}
  <div class="vl-u-spacer">
    <div class="vl-u-display-flex vl-u-flex-space-between">
      <h3 class="vl-title vl-title--h3">
        {{t "agendaitem-details.decision-title"}}
      </h3>
      <div class="vl-u-spacer-extended-left-s">
        <a class="vl-link" {{action "toggleIsEditing"}}>
          {{t "buttons.edit"}}
        </a>
      </div>
    </div>
  </div>
  <div class="vl-u-spacer vl-typography">
    <div class="vl-u-spacer--xsmall">
      <h4 class="vl-title vl-title--h6">
        {{await agendaitem.decision.shortTitle}}
      </h4>
    </div>
    <p>
      {{await agendaitem.decision.description}}
    </p>
    <hr />
    <div class="vl-u-spacer-extended-top-s">
      {{#if (await agendaitem.decision.approved)}}
        <div class="vlc-pill vlc-pill--success">
          {{t "decided"}}
        </div>
      {{else}}
        <div class="vlc-pill vlc-pill--warning">
          {{t "not-decided"}}
        </div>
      {{/if}}
    </div>
  </div>
{{else}}
  {{agenda/agendaitem/agendaitem-decision-edit
    isEditing=isEditing
    agendaitem=agendaitem
  }}
{{/if}}