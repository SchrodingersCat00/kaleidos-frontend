<div
  class="vl-u-display-flex vl-u-flex-space-between vl-u-spacer-extended-bottom-s"
>
  <div class="compare-left-column">
    {{utils/agenda-selector
      searchField="name"
      propertyToShow="agendaName"
      placeholder=(t "select-agenda")
      multiSelect=false
      sortField="label"
      selectedItems=agendaOne
      selectModel=(action "chooseAgendaOne")
    }}
  </div>
  <div class="compare-right-column">
    {{utils/agenda-selector
      searchField="name"
      propertyToShow="agendaName"
      placeholder=(t "select-agenda")
      multiSelect=false
      sortField="label"
      selectedItems=agendaTwo
      selectModel=(action "chooseAgendaTwo")
    }}
  </div>
</div>
{{#if (await combinedItems)}}
  {{#each (await combinedItems) as |group|}}
    <div class="compare-grid-container">
      <div class="vlc-list-section-header">
        {{group.leftGroupName}}
      </div>
      <div class="vlc-list-section-header">
        {{group.rightGroupName}}
      </div>
      {{#each group.agendaitems as |item|}}
        <div class="vlc-agenda-items-new__sub-item grid-item">
          {{#if item.left.agendaitem}}
            {{agenda/agenda-list/list-item agendaitem=item.left.agendaitem}}
          {{/if}}
        </div>
        <div class="vlc-agenda-items-new__sub-item grid-item">
          {{#if item.right.agendaitem}}
            {{agenda/agenda-list/list-item agendaitem=item.right.agendaitem}}
          {{/if}}
        </div>
      {{/each}}
    </div>
  {{/each}}
{{else if isLoadingAgendaitems}}
  {{web-components/vl-loader text=(t "loading-text-inactive")}}
{{else if (and agendaOne agendaTwo)}}
  <div class="vl-u-spacer-extended-top-s">
    {{web-components/vl-alert message=(t "no-agendaitems-yet")}}
  </div>
{{/if}}