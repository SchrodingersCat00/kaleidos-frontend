{{#if (is-empty (await announcements))}}
  <div class="vlc-agenda-items__header">
    <h5 class="vl-title vl-title--h5">
      {{t "announcement.no-announcements"}}
    </h5>
  </div>
{{else}}
  <h5 class="vl-title vl-title--h5 vl-u-spacer">
    {{t "agendas.announcements-subtitle"}}
  </h5>
  {{#each (await announcements) as |announcement|}}
    {{agenda/announcement-list/list-item announcement=announcement}}
  {{/each}}
{{/if}}