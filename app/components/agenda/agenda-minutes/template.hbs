<div class="vlc-container">
  <div class="vl-u-display-flex vl-u-flex-align-baseline">
    <h3 class="vl-title vl-title--h3">
      {{t "notes"}}
    </h3>
    <div class="vl-u-spacer-extended-left-s">
      <a class="vl-link" {{action "toggleIsEditing"}}>
        {{t "edit"}}
      </a>
    </div>
  </div>
  {{sessions/session-notes currentSession=currentSession isEditing=isEditing}}
  <div class="vl-u-spacer-extended-bottom">
    {{#each (await agendaitemGroups) as |agendaitemGroup|}}
      <div class="vl-u-spacer-extended-bottom">
        <h2 class="vl-title vl-title--h4">
          {{#each agendaitemGroup.mandatees as |mandatee|}}
            {{mandatee.title}}<br />
          {{/each}}
        </h2>
      </div>
      {{#each agendaitemGroup.agendaitems as |agendaitem|}}
        <div class="vl-u-spacer-extended-bottom-s">
          <h3 class="vl-title vl-title--h5">
            {{agendaitem.foundPriority}}
            .
            {{await agendaitem.title}}
          </h3>
        </div>
        <div class="vl-u-spacer-extended-bottom-s">
          <div class="vl-typography">
            {{#if agendaitem.meetingRecord.description}}
              <p>
                {{await agendaitem.meetingRecord.description}}
              </p>
            {{else}}
              <p class="vl-u-text--muted">
                {{t "no-notes"}}
              </p>
            {{/if}}
          </div>
        </div>
      {{/each}}
      <div class="vlc-hr"></div>
    {{/each}}
  </div>
</div>