<div class="vlc-navbar vlc-navbar--bordered-bottom">
  <div class="vlc-toolbar vlc-toolbar--auto">
    <div class="vlc-toolbar__justified">
      <div class="vlc-toolbar__item full-width-selector">
        <label class="vl-form__label" for="dossierId">
            {{t "search-agenda-items"}}
          </label>
          <div class="vl-input-field--inline vl-u-display-flex vl-u-flex-align-center vl-u-flex-space-between separate-children">
          {{input value=value key-press=(perform searchTask) class="vl-input-field vl-input-field__input"}}
          <button class="vl-input-field__submit vl-button" {{action "search"}}>
            <i class="vl-vi vl-vi-magnifier"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>