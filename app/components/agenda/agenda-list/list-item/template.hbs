{{#if selectedAgendaItem}}
  <div class="vl-u-spacer-extended-bottom-s">
    <h3 class="vl-u-text--muted">
      {{number}}
      .
      {{await agendaitem.subcase.case.type.label}}
    </h3>
    <h4 class="vl-title vl-title--h6">
      {{await agendaitem.subcase.shortTitle}}
    </h4>
  </div>
  {{!-- <div class="agenda-sub-options">
      <p class="agenda-postponed-option">
        {{#if agendaitem.retracted}}
          {{t "agenda-item.postponed"}}
        {{/if}}
        {{#if (await agendaitem.postponedTo) as |sess|}}
          {{t "agenda-item.postponed-until"}}
          {{moment-format sess.plannedStart "dddd DD-MM-YYYY"}}
        {{/if}}
      </p>
    </div> --}}
  <div class="vl-u-display-flex vl-u-flex-space-between">
    <span class="vlc-agenda-item__meta">
      {{!-- {{await agendaitem.subcase.shortTitle}}  Phase todo --}}
    </span>
    {{#if (await agendaitem.subcase.formallyOk)}}
      <div class="vl-u-display-flex active">
        <i class="vl-vi vl-vi-check-small--success"></i>
        <span class="vlc-agenda-item__meta">
          {{t "agendaitem-details.formal-ok"}}
        </span>
      </div>
    {{else}}
      <div class="vl-u-display-flex default">
        <span class="vlc-agenda-item__meta">
          {{t "agendaitem-details.formal-nok"}}
        </span>
      </div>
    {{/if}}
  </div>
{{else}}
  <h3 class="vl-title vl-u-text--small">
    {{number}}
    .
    {{await agendaitem.subcase.case.type.label}}
  </h3>
  <h4 class="vl-title vl-title--h5">{{await agendaitem.subcase.shortTitle}}</h4>
  <p class="vl-long-title">
    {{await agendaitem.subcase.title}}
  </p>
  <p class="vl-long-title">
    {{await agendaitem.subcase.concluded}}
  </p>
  {{#if (await agendaitem.subcase.documents)}}
  <hr class="vlc-hr">
  <div class="vl-u-display-flex vl-attachments">
    {{#each (await agendaitem.subcase.documents) as |document|}}
      <div class="vl-u-display-flex vl-u-flex-align-center vl-attachment">
        <div
          class="vl-badge vl-badge--icon vl-badge--small vl-badge--alt vl-document-badge"
        >
          <i class="vl-badge__icon vl-vi vl-vi-file" aria-hidden="true"></i>
        </div>
        <p class="vl-u-text--bold">{{document-name document=document agendaitem=agendaitem}}</p>
      </div>
    {{/each}}
  </div>
  {{/if}}
  <div class="vl-u-display-flex vl-u-flex-space-between">
    <span class="vlc-agenda-item__meta">
      {{! 2de principiele goedkeuring }}
    </span>
    {{#if (await agendaitem.subcase.formallyOk)}}
      <div class="vl-u-display-flex active">
        <i class="vl-vi vl-vi-check-small" aria-hidden="true"></i>
        <span class="vlc-agenda-item__meta">
          {{t "agendaitem-details.formal-ok"}}
        </span>
      </div>
    {{else}}
      <div class="vl-u-display-flex default">
        <span class="vlc-agenda-item__meta">
          {{t "agendaitem-details.formal-nok"}}
        </span>
      </div>
    {{/if}}
  </div>
{{/if}}