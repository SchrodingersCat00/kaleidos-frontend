<div
  class="c-agenda-item
    {{active-class
      (await agendaitem)
      (await selectedAgendaItem)
      class="c-agenda-item"
    }}"
  {{action "selectAgendaItem" agendaitem}}>
  {{#if agendaitem.id}}
    <h6 class="vl-title vl-title--h6">
      {{number}}
      . {{await agendaitem.subcase.case.type.label}}
    </h6>
    <h5 class="vl-title vl-title--h5">
      {{agendaitem.subcase.shortTitle}}
    </h5>
    <p class="c-long-title">
      {{agendaitem.subcase.title}}
    </p>
    <div class="agenda-sub-options">
      <p class="agenda-postponed-option">
        {{#if agendaitem.postponed}}
          {{t "agenda-item.postponed"}}
        {{/if}}
        {{#if (await agendaitem.postponedToSession) as |sess|}}
          {{t "agenda-item.postponed-until"}}
          {{moment-format sess.plannedStart "dddd DD-MM-YYYY"}}
        {{/if}}
      </p>
    </div>
    <div class="vl-u-display-flex c-attachments">
      {{#each (await agendaitem.subcase.documentVersions) as |documentVersion|}}
        <div
          class="vl-u-display-flex vl-u-flex-align-center c-attachment"
          {{action "downloadFile" documentVersion}}
        >
          <div
            class="vl-badge vl-badge--icon vl-badge--small vl-badge--alt c-document-badge"
          >
            <i class="vl-badge__icon vl-vi vl-vi-file"></i>
          </div>
          <p>
            {{documentVersion.nameToDisplay}}
          </p>
        </div>
      {{/each}}
    </div>
    <div class="vl-u-display-flex vl-u-flex-space-between">
      <span class="c-agenda-item__meta">
        2de principiele goedkeuring
      </span>
      <div class="vl-u-display-flex default">
        <i class="vl-vi vl-vi-check-small"></i>
        {{#if agendaitem.formallyOk}}
          <span class="c-agenda-item__meta">
            {{t "agendaitem-details.formal-ok"}}
          </span>
        {{else}}
          <span class="c-agenda-item__meta">
            {{t "agendaitem-details.formal-ok"}}
          </span>
        {{/if}}
      </div>
    </div>
  {{/if}}
</div>