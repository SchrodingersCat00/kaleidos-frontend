<form class="vl-form">
  <div class="vl-form-grid">
    {{web-components/vl-form-label value=(t "announcement.title")}}
    {{web-components/vl-form-input id="title" value=title}}
    <div class="vl-col--4-4">
      {{web-components/vl-form-label value=(t "announcement.text")}}
      {{textarea
        class="vl-textarea vl-textarea--block"
        rows="4"
        id="text"
        value=text
      }}
    </div>
    <div class="vl-col--3-4 vl-push--3-3">
      <button class="vl-button" {{action "createAnnouncement"}}>
        {{t "buttons.create-announcement"}}
      </button>
    </div>
  </div>
</form>