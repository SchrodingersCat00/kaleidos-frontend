<div class="vl-u-spacer--xsmall">
  <div class="vl-u-display-flex vl-u-flex-space-between">
    <h4 class="vl-title vl-title--h6 vl-u-text--capitalize">
      {{await numberToShow}}
      .
      {{await agendaitem.subcase.newsletterInfo.title}}
    </h4>
    {{#if allowEditing}}
      {{#if (or isAdmin isEditor)}}
        <div class="vl-u-spacer-extended-left-s">
          <a class="vl-link" {{action "toggleIsEditing"}}>
            {{t "edit"}}
          </a>
        </div>
      {{/if}}
    {{/if}}
  </div>
  <div class="vl-u-text vl-u-text--small vl-u-text--muted">
    {{moment-format (await agenda.createdFor.plannedStart) "DD MMMM YYYY"}}
  </div>
</div>
<div class="vl-u-spacer--xsmall">
  <div class="vl-u-text">
    <p>
      {{await agendaitem.subcase.newsletterInfo.text}}
    </p>
  </div>
</div>
{{#if (gt (await agendaitem.themes.length) 0)}}
  <div class="vl-u-spacer--xsmall">
    <div class="vl-u-spacer--xsmall">
      <h4 class="vl-title vl-title--h6 vl-u-text--capitalize">
        {{t "themes"}}
      </h4>
    </div>
    <div class="vl-u-spacer-extended-top-s">
      <ul>
        {{#each (await agendaitem.themes) as |theme|}}
          <li
            class="vl-pill vl-u-spacer-extended-right-s vl-u-text--capitalize"
          >
            {{theme.label}}
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
{{/if}}
<div class="vl-u-spacer--xsmall">
  <hr class="vlc-hr" />
  <div class="vl-u-spacer-extended-top-s">
    {{utils/documents-list-for-item
      item=(await agendaitem.subcase.newsletterInfo)
      agendaitem=agendaitem
    }}
  </div>
</div>