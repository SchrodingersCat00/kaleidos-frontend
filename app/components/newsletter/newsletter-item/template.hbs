{{#if (is-pending agendaitem.subcase.newsletterInfo)}}
  {{web-components/vl-loader text=(t "newletter-loading-text")}}
{{else if (not isEditing)}}
  {{#if (not allowEditing)}}
    {{#if (await agendaitem.subcase.newsletterInfo.finished)}}
      {{newsletter/newsletter-item/item-content
        allowEditing=allowEditing
        index=index
        isEditing=isEditing
        agendaitem=agendaitem
      }}
    {{/if}}
  {{else}}
    {{newsletter/newsletter-item/item-content
      allowEditing=allowEditing
      isEditing=isEditing
      agendaitem=agendaitem
    }}
  {{/if}}
{{else}}
  {{news-item/edit-item
    agendaitem=agendaitem
    isLoading=isLoading
    item=(await agendaitem.subcase.newsletterInfo)
    isEditing=isEditing
  }}
{{/if}}