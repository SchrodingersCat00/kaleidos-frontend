<div class="vl-u-display-flex vl-u-flex-space-between">
  <h4 class="vl-title vl-title--h3 vl-u-text--capitalize">
    {{t "general-newsletter"}}
  </h4>
  <div class="vl-u-spacer-extended-left-s">
    <a class="vl-link" {{action "toggleIsEditing"}}>
      {{t "buttons.edit"}}
    </a>
  </div>
</div>
<div class="vl-u-spacer">
  <h3 class="vl-title vl-title--h6">
    {{t "title-newsletter"}}
  </h3>
  <h3 class="vl-u-text--capitalize">
    {{await meeting.newsletter.title}}
  </h3>
</div>
<div class="vl-u-spacer">
  <h3 class="vl-title vl-title--h6">
    {{t "subtitle-newsletter"}}
  </h3>
  <h3 class="vl-u-text--capitalize">
    {{await meeting.newsletter.subtitle}}
  </h3>
</div>
{{!-- <div class="vl-u-spacer">
  <p class="vl-u-text--italic">
    {{await meeting.newsletter.text}}
  </p>
</div> --}}
<div class="vl-u-spacer vl-u-display-flex vl-u-flex-space-between">
  <div class="vl-u-text">
    <h3 class="vl-title vl-title--h6">
      {{t "edit-item.date-publication"}}
    </h3>
    <p class="vl-u-text--italic">
      {{moment-format (await meeting.newsletter.publicationDate) "DD MMMM YYYY"
      }}
    </p>
  </div>
  <div class="vl-u-text">
    <h3 class="vl-title vl-title--h6">
      {{t "newsletter-doc-date"}}
    </h3>
    <p class="vl-u-text--italic">
      {{moment-format
        (await meeting.newsletter.publicationDocDate)
        "DD MMMM YYYY"
      }}
    </p>
  </div>
</div>

{{#if isEditing}}
  {{#web-components/vl-modal
    isOverlay=true
    closeModal=(action "close")
    title=editTitle
  }}
    {{newsletter/edit-newsletter
      selectedMeeting=meeting
      close=(action "close")
    }}
  {{/web-components/vl-modal}}
{{/if}}