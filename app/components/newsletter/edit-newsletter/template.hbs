<div class="vl-modal-dialog__content">
  <div
    class="vl-form-grid vl-form-grid--is-stacked vl-u-flex-align-right vl-u-spacer-extended-bottom-s"
  >
    <div class="vlc-input-field-block vl-col--2-4">
      {{web-components/vl-form-label value=(t "date-publication")}}
      {{web-components/vl-datepicker
        selectedDate=date
        dateChanged=(action "selectDate")
      }}
    </div>
    <div class="vlc-input-field-block vl-col--2-4">
      {{web-components/vl-form-label value=(t "newsletter-doc-date")}}
      {{web-components/vl-datepicker
        selectedDate=docDate
        dateChanged=(action "selectDocDate")
      }}
    </div>
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "title-newsletter")}}
    {{textarea
      rows="3"
      class="vl-textarea vl-textarea--block"
      value=selectedMeeting.newsletter.title
    }}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "subtitle-newsletter")}}
    {{textarea
      rows="3"
      class="vl-textarea vl-textarea--block"
      value=selectedMeeting.newsletter.subtitle
    }}
  </div>
</div>
<div class="vlc-navbar vlc-navbar--no-padding vlc-navbar--bordered-top">
  <div class="vlc-toolbar">
    <div class="vlc-toolbar__left">
      <div class="vlc-toolbar__item">
        <button
          class="vl-button vl-button--link vl-button--narrow"
          {{action "close"}}
        >
          {{t "cancel"}}
        </button>
      </div>
    </div>
    <div class="vlc-toolbar__right">
      <div class="vlc-toolbar__item">
        <button
          class="vl-button vl-button--narrow"
          {{action "saveChanges" selectedMeeting}}
        >
          {{t "save"}}
        </button>
      </div>
    </div>
  </div>
</div>