<div class="vlc-input-field-block">
  {{web-components/vl-form-label value=(t "case-item.case-type")}}
  {{utils/case-type-selector chooseCaseType=(action "typeChanged")}}
</div>
<div class="vlc-input-field-block">
  {{web-components/vl-form-label value=(t "metadata-form.short-title")}}
  {{textarea class="vl-textarea vl-textarea--block" rows="2" value=shortTitle}}
</div>
<div class="vlc-input-field-block">
  {{web-components/vl-form-label value=(t "metadata-form.title")}}
  {{textarea class="vl-textarea vl-textarea--block" rows="4" value=title}}
</div>
<div class="vlc-input-field-block">
  {{web-components/vl-form-label value=(t "case-item.current-subcase")}}
  <select class="vl-select vl-select--block">
    <option>
      {{t "example-subcase"}}
    </option>
  </select>
</div>