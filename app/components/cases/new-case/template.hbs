<h3 class="vl-title vl-title--h3">
  {{t "cases.new-case"}}
</h3>
<hr class="vlc-hr">
<form class="vl-form" onsubmit={{action "createCase"}}>
  {{cases/case-levels policyLevelChanged=(action "policyLevelChanged")}}
  {{cases/forms/metadata-form
    shortTitleChange=(action "shortTitleChange")
    titleChange=(action "titleChange")
    typeChanged=(action "typeChanged")
    shortTitle=shortTitle
    title=title
  }}
  <div class="vl-u-display-flex vl-u-flex-space-between vl-action-group">
    <button
      type="button"
      class="vl-button vl-button--narrow"
      data-test-rr="sign-up-button"
      {{action "close"}}
    >
      {{t "buttons.cancel"}}
    </button>
    <button
      type="submit"
      class="vl-button vl-button--narrow"
      data-test-rr="sign-up-button"
    >
      {{t "buttons.create-case"}}
    </button>
  </div>
</form>