{{#light-table table height="100vh" tableClassNames="vl-data-table" as |t|}}
  {{t.head
    onColumnClick=(action "onColumnClick")
    iconSortable="vl-data-table__header-title__sort-icon vl-vi vl-vi-long-arrow"
    iconAscending="vl-data-table__header-title__sort-icon vl-vi vl-vi-long-arrow"
    iconDescending="vl-data-table__header-title__sort-icon vl-vi vl-vi-long-arrow"
    fixed=true
  }}
  {{#t.body
    canExpand=true
    multiRowExpansion=false
    onScrolledToBottom=(action "onScrolledToBottom") as |body|
  }}
    {{#body.expanded-row as |row|}}{{yield row}}{{/body.expanded-row}}
    {{#if isLoading}}
      {{#body.loader}}
        {{web-components/vl-loader text="De agendapunten worden geladen.."}}
      {{/body.loader}}
    {{/if}}
  {{/t.body}}
{{/light-table}}