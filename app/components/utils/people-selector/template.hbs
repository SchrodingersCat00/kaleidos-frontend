{{#if (not multiSelect)}}
{{#power-select
  options=people
	selected=selectedPerson
	disabled=readOnly
  searchField="firstName lastName"
  search=(perform searchTask)
  oninput=(action "resetValueIfEmpty")
  onchange=(action "choosePerson") 
as |person|
}}
  {{person.fullName}}
{{/power-select}}
{{else}}
{{#power-select-multiple
  options=people
  selected=selectedPerson
  searchField="firstName lastName"
  search=(perform searchTask)
  oninput=(action "resetValueIfEmpty")
  onchange=(action "choosePerson") 
as |person|
}}
  {{person.fullName}}
{{/power-select-multiple}}
{{/if}}