{{#each (await item.documentVersions) as |documentVersion|}}
  <li class="vlc-document-list__item">
    {{#if (not isNotClickable)}}
      <a {{action "downloadFile" documentVersion}}>
        <div
          class="vl-badge vl-badge--icon vl-badge--small-medium vl-badge--alt"
        >
          <i class="vl-badge__icon vl-vi vl-vi-document" aria-hidden="true"></i>
        </div>
        {{document-name documentVersion=documentVersion item=agendaitem}}
        {{documentVersion.chosenFileName}}
      </a>
    {{else}}
      <span>
        <div
          class="vl-badge vl-badge--icon vl-badge--small-medium vl-badge--alt"
        >
          <i class="vl-badge__icon vl-vi vl-vi-document" aria-hidden="true"></i>
        </div>
        {{documentVersion.chosenFileName}}
        {{document-name documentVersion=documentVersion item=agendaitem}}
      </span>
    {{/if}}
  </li>
{{/each}}