{{#each (await item.documents) as |document|}}
  <li class="vlc-document-list__item">
    {{#if (not isNotClickable)}}
      <a {{action "downloadFile" document.lastDocumentVersion}}>
        <div
          class="vl-badge vl-badge--icon vl-badge--small-medium vl-badge--alt"
        >
          <i class="vl-badge__icon vl-vi vl-vi-document"></i>
        </div>
        {{document-name
          documentVersion=(await document.lastDocumentVersion)
          item=agendaitem
        }}
      </a>
    {{else}}
      <span>
        <div
          class="vl-badge vl-badge--icon vl-badge--small-medium vl-badge--alt"
        >
          <i class="vl-badge__icon vl-vi vl-vi-document"></i>
        </div>
        {{document-name
          documentVersion=(await document.lastDocumentVersion)
          item=agendaitem
        }}
      </span>
    {{/if}}
  </li>
{{/each}}