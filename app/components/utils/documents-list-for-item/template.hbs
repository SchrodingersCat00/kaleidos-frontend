{{#if (is-pending item.documents)}}
  {{web-components/vl-loader text=(t "documents-loading-text")}}
{{else}}
  {{#each (await item.documents) as |document|}}
    <li class="vlc-document-list__item">
      {{#if (is-pending document.lastDocumentVersion)}}
        <div class="skeletal-loader" role="alert" aria-busy="true"></div>
      {{else if (not isNotClickable)}}
        <a {{action "downloadFile" document.lastDocumentVersion}}>
          <div
            class="vl-badge vl-badge--icon vl-badge--small-medium vl-badge--alt"
          >
            <i class="vl-badge__icon vl-vi vl-vi-document"></i>
          </div>
          {{document-name
            documentVersion=(await document.lastDocumentVersion)
            item=agendaitem
          }}
        </a>
      {{else}}
        <span>
          <div
            class="vl-badge vl-badge--icon vl-badge--small-medium vl-badge--alt"
          >
            <i class="vl-badge__icon vl-vi vl-vi-document"></i>
          </div>
          {{document-name
            documentVersion=(await document.lastDocumentVersion)
            item=agendaitem
          }}
        </span>
      {{/if}}
    </li>
  {{/each}}
{{/if}}