<h3 class="vl-title vl-title--h3">
  {{t "create-mandatee"}}
</h3>
<div class="vl-modal-dialog__content">
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "name")}}
    {{web-components/vl-form-input width="4" value=title}}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "add-people")}}
    {{utils/people-selector choosePerson=(action "personSelected")}}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "mandatees")}}
    {{utils/domains-selector chooseDomain=(action "chooseDomain")}}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "mandatee-form.start-date")}}
    {{web-components/vl-datepicker dateChanged=(action "selectStartDate")}}
  </div>
</div>
<div class="vl-u-display-flex vl-u-flex-space-between vl-action-group">
  <button class="vl-button vl-button--tertiary" {{action "closeModal"}}>
    {{t "buttons.cancel"}}
  </button>
  <button class="vl-button vl-button--tertiary" {{action "createMandatee"}}>
    {{t "create-mandatee"}}
  </button>
</div>