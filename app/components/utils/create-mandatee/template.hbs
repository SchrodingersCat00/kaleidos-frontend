<div class="vl-modal-dialog__content">
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "name")}}
    {{web-components/vl-form-input width="4" value=title}}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "nick-name")}}
    {{web-components/vl-form-input width="4" value=nickName}}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "add-people")}}
    {{utils/create-person-selector
      selectedItems=selectedPerson
      selectModel=(action "personSelected")
    }}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "mandates")}}
    {{utils/domains-selector chooseDomain=(action "chooseDomain")}}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "start-date")}}
    {{web-components/vl-datepicker dateChanged=(action "selectStartDate")}}
  </div>
</div>
{{web-components/vl-modal-footer
  isLoading=isLoading
  cancelButtonText=(t "cancel")
  saveButtonText=(t "create-mandatee")
  cancelAction=(action "closeModal")
  saveAction=(action "createMandatee")
}}