{{#if (not singleSelect)}}
  {{#power-select-multiple
    options=mandatees
    selected=selectedMandatees
    search=(perform searchTheme)
    oninput=(action "resetValueIfEmpty")
    onchange=(action "chooseMandatee") 
  as |mandatee|
  }}
    {{mandatee.title}}
  {{/power-select-multiple}}
{{else}}
  {{#power-select
    options=mandatees
    selected=selectedMandatees
    search=(perform searchTheme)
    oninput=(action "resetValueIfEmpty")
    onchange=(action "chooseMandatee") 
  as |mandatee|
  }}
    {{mandatee.title}}
  {{/power-select}}
{{/if}}