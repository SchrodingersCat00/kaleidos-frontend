{{#if (not singleSelect)}}
  {{#power-select-multiple
    options=filteredMandatees
    selected=selectedMandatees
    disabled=readOnly
    search=(perform searchTheme)
    oninput=(action "resetValueIfEmpty")
    onchange=(action "chooseMandatee") as |mandatee|
  }}
    {{await mandatee.person.nameToDisplay}}{{t "divider"}}{{mandatee.title}}
  {{/power-select-multiple}}
{{else}}
  {{#power-select
    options=filteredMandatees
    selected=selectedMandatees
    disabled=readOnly
    search=(perform searchTheme)
    oninput=(action "resetValueIfEmpty")
    onchange=(action "chooseMandatee") as |mandatee|
  }}
    {{await mandatee.person.nameToDisplay}}{{t "divider"}}{{mandatee.title}}
  {{/power-select}}
{{/if}}