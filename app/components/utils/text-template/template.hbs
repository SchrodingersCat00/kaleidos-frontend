<div class="vlc-input-field vlc-input-field-block">
  {{web-components/vl-form-label value="Tekst templates"}}
  {{#power-select
    options=items
    selected=selectedItems
    disabled=readOnly
    searchField=searchField
    placeholder=placeholder
    searchMessage=searchMessage
    loadingMessage=loadingMessage
    noMatchesMessage=noMatchesMessage
    search=(perform searchTask)
    oninput=(action "resetValueIfEmpty")
    onchange=(action "selectModel") as |model|
  }}
    {{model.label}}
    {{#attach-popover
      placement="top"
      class="ember-attacher-popper ember-attacher-popper-wide"
    }}
      <p>
        {{{model.description}}}
      </p>
    {{/attach-popover}}
  {{/power-select}}
</div>
<div class="vlc-input-field vlc-input-field-block">
  {{web-components/vl-form-label value=label}}
  {{web-components/vl-rdfa-editor
    isLarge=isExpanded
    richtext=(await text)
    handleRdfaEditorInit=(action "handleRdfaEditorInit")
  }}
</div>