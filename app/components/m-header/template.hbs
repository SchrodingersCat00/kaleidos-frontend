<div class="vlc-toolbar vlc-toolbar--auto">
  <div class="vlc-toolbar__left">
    <div class="vlc-toolbar__item">
      <ul class="vl-tabs vl-u-reset-margin">
        <li class="vl-tab">
          {{#link-to
            "agendas"
            class="vl-tab__link"
            current-when="agendas agenda"
          }}
            {{t "agenda"}}
          {{/link-to}}
        </li>
        <li class="vl-tab">
          {{#link-to "cases" class="vl-tab__link"}}
            {{t "cases"}}
          {{/link-to}}
        </li>
        <li class="vl-tab">
          {{#link-to
            "newsletters"
            class="vl-tab__link"
            current-when="newsletters-overview"
          }}
            {{t "newsletter"}}
          {{/link-to}}
        </li>
          {{#if isAdmin}}
          <li class="vl-tab">
            {{#link-to "settings" class="vl-tab__link"}}
              {{t "settings"}}
            {{/link-to}}
          </li>
        {{/if}}
        <li class="vl-tab">
          <a class="vl-tab__link" role="tab" aria-selected="true">
            {{t "notifications"}}
          </a>
        </li>
      </ul>
    </div>
  </div>
  <div class="vlc-toolbar__right">
    <div class="vlc-toolbar__item">
      {{#if user}}
        <div class="vlc-user">
          <div class="vlc-user__username">
            {{user.firstName}}
            {{user.lastName}}
            (
            {{role}}
            )
          </div>
          <a class="vlc-user__action" {{action "navigateToMockLogin"}}>
            {{t "sign-out"}}
          </a>
        </div>
      {{else}}
        <div class="vlc-user">
          <div class="vlc-user__username"></div>
          {{#link-to "mock-login" class="vlc-user__action"}}
            {{t "login"}}
          {{/link-to}}
        </div>
      {{/if}}
    </div>
  </div>
</div>