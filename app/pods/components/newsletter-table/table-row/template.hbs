<tr class="lt-row">
  <td class="lt-cell align-left">
    {{@agendaItem.priority}}
  </td>
  <td class="lt-cell align-left vl-data-table-col-7">
    {{#if @newsletterInfo}}
      <div class="vl-u-spacer-extended-bottom-s">
        <p class="vl-u-text--bold">
          {{@newsletterInfo.title}}
        </p>
      </div>
      <div class="vl-u-spacer-extended-bottom-s">
        {{{@newsletterInfo.richtext}}}
      </div>
    {{else}}
      <p class="vl-u-text--muted">
        {{t "no-newsletter-info"}}
      </p>
    {{/if}}
  </td>
  <td class="lt-cell align-left">
    {{#each (await @agendaItem.mandatees) as |mandatee|}}
      {{await mandatee.person.nameToDisplay}}<br>
    {{/each}}
  </td>
  <td class="lt-cell align-left">
    <WebComponents::VlToggle
      @value={{@newsletterInfo.inNewsletter}}
      @valueChanged={{this.setInNewsletter}}
    />
  </td>
  <td class="lt-cell align-left">{{moment-format @newsletterInfo.modified "DD.MM.YYYY - HH:mm"}}</td>
  <td class="lt-cell align-left">
    <NewsletterTable::ButtonToolbar
      @agendaItem={{@agendaItem}}
      @onEdit={{this.startEditing}}
    />
  </td>
</tr>
{{#if this.isEditing}}
  <tr class="lt-row lt-expanded-row">
    <td colspan="5">
      <div class="vlc-container-center">
        <NewsItem::EditItem
          @newsletterInfo={{@newsletterInfo}}
          @agendaitem={{@agendaItem}}
          @onCancel={{this.stopEditing}}
          @onSave={{this.stopEditing}}
        />
      </div>
    </td>
  </tr>
{{/if}}