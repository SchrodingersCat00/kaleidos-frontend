<div class="vl-form__group vl-u-bg-porcelain">
  {{!-- Editor with annotated decision  text will come somwhere around here in the future --}}
  <div class="vlc-input-field vlc-input-field-block vl-u-spacer-extended-bottom">
    <WebComponents::VlFormLabel @value={{t "result-decision"}}/>
  {{#if  this.decisionResultCodesLoaded}}
    <PowerSelect
            @searchEnabled={{false}}
            @options={{this.decisionResultCodes}}
            @selected={{this.treatment.decisionResultCode}}
            @onchange={{this.changeDecisionResultCode}}
            as |resultCode|>
      {{resultCode.label}}
    </PowerSelect>
  {{else}}
    <WebComponents::VlLoader @text={{t "loading-text-inactive"}} />
  {{/if}}
  </div>
  <div class="vl-action-group vl-action-group--align-right">
    <a
      href="javascript://"
      class="vl-link"
      {{on "click" this.cancelEdit}}
    >
      {{t "cancel"}}
    </a>
    <WebComponents::VlSaveButton
      @text={{t "save"}}
      @isLoading={{this.saveTreatment.isRunning}}
      @saveAction={{perform this.saveTreatment}}
    />
  </div>
</div>