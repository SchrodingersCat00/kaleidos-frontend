{{#if model}}
  {{title (t "page-title")}}
  {{head-layout}}
  {{#if (await alert)}}
    <WebComponents::VlAlert
      class="vl-alert-relative vl-alert-relative--center {{await type}}"
      aria-live="assertive"
      @title={{await alert.title}}
      @message={{await alert.message}}
      @closeable={{true}}
      @onClose={{action "close"}}
    />
  {{/if}}
  {{#if this.toaster.toasts.length}}
    <Utils::Toaster @toasts={{this.toaster.toasts}} />
  {{/if}}
  {{#if showHeader}}
    {{m-header
      selectedOption=selectedOption
      options=options
      navigateToRoute=(action "navigateToRoute")
      navigateToLogin=(action "navigateToLogin")
    }}
  {{/if}}
{{/if}}
{{outlet}}
