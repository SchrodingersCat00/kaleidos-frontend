{{title (t "cases")}}
{{cases/cases-header isAddingCase=isAddingCase close=(action "close")}}
<div class="vlc-scroll-wrapper__body">
  <div class="vl-u-spacer-extended-l">
    {{cases/cases-filter
      size=size
      searchText=(readonly searchText)
      searchInDecisionsOnly=(readonly decisionsOnly)
      dateFrom=(or dateFrom null)
      dateTo=(or dateTo null)
      ministerName=(readonly mandatees)
      filter=(action "filterCases")
    }}
    <div class="vl-u-display-flex vl-u-flex-space-between">
      <h2 class="vl-title vl-title--h3">
        {{t "my-cases"}}
      </h2>
      <div class="vl-action-group vl-action-group--align-right">
        {{#if (or isAdmin isEditor)}}
          <div class="action-toggle-container">
            {{web-components/vl-form-label value=(t "show-archived")}}
            {{web-components/vl-toggle value=isArchived}}
          </div>
        {{/if}}
        <div>
          <label class="vl-form__label" for="dossierId">
            {{t "amount-showed"}}
          </label>
          {{#power-select
            options=sizeOptions
            selected=size
            searchEnabled=false
            onchange=(action "selectSize") as |sizeValue|
          }}
            {{sizeValue}}
          {{/power-select}}
        </div>
      </div>
    </div>
    {{#data-table
      content=model
      page=page
      size=size
      sort=sort
      class="vl-data-table vl-data-table--zebra vl-data-table--align-middle"
      isLoading=isLoadingModel as |table|
    }}
      {{#table.content as |c|}}
        {{#c.header}}
          <th
            class="vl-data-table-col-9 vl-data-table__header-title">
            {{t "case-name"}}
          </th>
          <th
            class="vl-data-table-col-1 vl-data-table__header-title">
            {{t "created-on"}}
          </th>
          {{th-sortable
            class="vl-data-table-col-1 vl-data-table__header-title"
            currentSorting=sort
            field="sessionDates"
            label="Op agenda van"
          }}
          <th class="vl-data-table-col-1"></th>
        {{/c.header}}
        {{#c.body as |row|}}
          <td>
            <p>
              {{#if row.shortTitle}}
                {{row.shortTitle}}
              {{else}}
                {{row.title}}
              {{/if}}
            </p>
          </td>
          <td>
            {{moment-format row.created "DD-MM-YYYY HH:mm"}}
          </td>
          <td>
            {{moment-format row.sessionDates "DD-MM-YYYY"}}
          </td>
          <td class="vl-u-align-right">
            {{#if (or isAdmin isEditor)}}
              <button class="vl-button vl-button--link vl-button--icon">
                <i
                  class="vl-button__icon vl-vi vl-vi-nav-show-more-horizontal"
                ></i>
                {{#attach-popover
                  class="ember-attacher-popper"
                  hideOn="clickout click"
                  showOn="click"
                  animation="shift"
                  placement="bottom" as |attacher|
                }}
                  <ul class="vl-popover__link-list">
                    <li class="vl-popover__link-list__item">
                      <button
                        class="vl-link"
                        {{action attacher.hide}}
                        {{action "editRow" row}}
                      >
                        {{editCase}}
                      </button>
                    </li>
                    <li class="vl-popover__link-list__item">
                      {{#if (not row.isArchived)}}
                        <a
                          class="vl-link vl-link--block"
                          {{action attacher.hide}}
                          {{action "requestArchiveCase" row}}
                        >
                          {{archiveCase}}
                        </a>
                      {{else}}
                        <a
                          class="vl-link vl-link--block"
                          {{action attacher.hide}}
                          {{action "unarchiveCase" row}}
                        >
                          {{unArchiveCase}}
                        </a>
                      {{/if}}
                    </li>
                  </ul>
                {{/attach-popover}}
              </button>
            {{/if}}
            {{#link-to
              "cases.case.subcases"
              row.id
              tagName="button"
              class="vl-button vl-button--link vl-button--icon"
            }}
              <i class="vl-button__icon vl-vi vl-vi-nav-right"></i>
            {{/link-to}}
          </td>
        {{/c.body}}
      {{/table.content}}
    {{/data-table}}
  </div>
</div>
{{#if isEditingRow}}
  {{#web-components/vl-modal
    isOverlay=true
    title=(t "edit-case")
    closeModal=(action "cancelEditing")
  }}
    {{cases/edit-case
      caseToEdit=caseToEdit
      cancelEditing=(action "cancelEditing")
    }}
  {{/web-components/vl-modal}}
{{/if}}
{{#if isArchivingCase}}
  {{web-components/vl-modal-verify
    title=(t "archive-case")
    message=(t "archive-case-message")
    cancel=(action "cancelArchiveCase")
    verify=(action "archiveCase")
  }}
{{/if}}
