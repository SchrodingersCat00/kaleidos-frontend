<div class="vl-u-bg-alt">
  {{agenda/agenda-header
    compareAgendas=(action "compareAgendas")
    navigateToSubCases=(action "navigateToSubCases")
    printDecisions=(action "printDecisions")
    navigateToCreateAnnouncement=(action "navigateToCreateAnnouncement")
    loading=(action "loadingAgendaitems")
    reloadRoute=(action "reloadRouteWithNewAgenda")
    clearSelectedAgendaItem=(action "navigateToOverview")
    navigateToNotes=(action "navigateToNotes")
  }}
</div>
{{#if (not isLoading)}}
  <div class="vlc-panel-layout">
    {{agenda/side-nav
      agendas=agendas
      currentAgenda=currentAgenda
      selectAgenda=(action "selectAgenda")
    }}
    {{outlet}}
  </div>
{{else}}
  {{web-components/vl-loader
    text="De agenda wordt goedgekeurd. Even geduld aub.."
  }}
{{/if}}
{{#if isPrintingDecisions}}
  {{#web-components/vl-modal
    isOverlay=true
    title=(t "printable-decisions-title")
    closeModal=(action "printDecisions")
  }}
    {{agenda/agenda-decisions decisions=printedDecisions}}
  {{/web-components/vl-modal}}
{{/if}}