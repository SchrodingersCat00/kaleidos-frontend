<div class="vl-u-spacer-extended-l settings-container">
  <div class="vl-u-spacer-extended-s">
    <button
      class="vl-button vl-button--tertiary vl-button--narrow vl-button--icon-before"
      {{action "showEditingMandateeForm"}}
    >
      <i class="vl-button__icon vl-button__icon--before vl-vi vl-vi-edit"></i>
      {{t "manage-ministers"}}
    </button>
  </div>
  <div class="vl-u-spacer-extended-s">
    <button
      class="vl-button vl-button--tertiary vl-button--narrow vl-button--icon-before"
      {{action "showAddingMandateForm"}}
    >
      <i class="vl-button__icon vl-button__icon--before vl-vi vl-vi-edit"></i>
      {{t "manage-government-domains"}}
    </button>
  </div>
  <div class="vl-u-spacer-extended-s">
    <button
      class="vl-button vl-button--tertiary vl-button--narrow vl-button--icon-before"
      {{action "showFunctionsManagement"}}
    >
      <i class="vl-button__icon vl-button__icon--before vl-vi vl-vi-edit"></i>
      {{t "manage-government-fields"}}
    </button>
  </div>
  <div class="vl-u-spacer-extended-s">
    <button
      class="vl-button vl-button--tertiary vl-button--narrow vl-button--icon-before"
      {{action "showIseCodeManagement"}}
    >
      <i class="vl-button__icon vl-button__icon--before vl-vi vl-vi-edit"></i>
      {{t "manage-ise-codes"}}
    </button>
  </div>
  <div class="vl-u-spacer-extended-s">
    <button
      class="vl-button vl-button--tertiary vl-button--narrow vl-button--icon-before"
      {{action "showAlertManagementForm"}}
    >
      <i class="vl-button__icon vl-button__icon--before vl-vi vl-vi-edit"></i>
      {{t "manage-alerts"}}
    </button>
  </div>
  <div class="vl-u-spacer-extended-s">
    <button
      class="vl-button vl-button--tertiary vl-button--narrow vl-button--icon-before"
      {{action "showDocumentTypesManagementForm"}}
    >
      <i class="vl-button__icon vl-button__icon--before vl-vi vl-vi-edit"></i>
      {{t "manage-document-types"}}
    </button>
  </div>
  <div class="vl-u-spacer-extended-s">
    <button
      class="vl-button vl-button--tertiary vl-button--narrow vl-button--icon-before"
      {{action "showCaseTypesManagementForm"}}
    >
      <i class="vl-button__icon vl-button__icon--before vl-vi vl-vi-edit"></i>
      {{t "manage-case-types"}}
    </button>
  </div>
  <div class="vl-u-spacer-extended-s">
    <button
      class="vl-button vl-button--tertiary vl-button--narrow vl-button--icon-before"
      {{action "showUserManagementInterface"}}
    >
      <i class="vl-button__icon vl-button__icon--before vl-vi vl-vi-edit"></i>
      {{t "manage-user-roles"}}
    </button>
  </div>
  <div class="vl-u-spacer-extended-s">
    <button
      class="vl-button vl-button--tertiary vl-button--narrow vl-button--icon-before"
      {{action "showSubcaseTypesManagementForm"}}
    >
      <i class="vl-button__icon vl-button__icon--before vl-vi vl-vi-edit"></i>
      {{t "manage-subcase-types"}}
    </button>
  </div>
</div>
{{#if isAddingMandate}}
  {{utils/model-manager
    modalTitle=(t "manage-government-domains")
    modelName="government-domain"
    close=(action "showAddingMandateForm")
  }}
{{/if}}
{{#if isManagingFunctions}}
  {{utils/manage-government-fields
    modalTitle=(t "manage-government-fields")
    close=(action "showFunctionsManagement")
  }}
{{/if}}
{{#if isManagingIseCodes}}
  {{utils/manage-ise-code
    modalTitle=(t "manage-ise-codes")
    close=(action "showIseCodeManagement")
  }}
{{/if}}
{{#if isManagingDocumentTypes}}
  {{utils/model-manager
    modalTitle=(t "manage-document-types")
    modelName="document-type"
    close=(action "showDocumentTypesManagementForm")
  }}
{{/if}}
{{#if isEditingMandatee}}
  {{#web-components/vl-modal
    isOverlay=true
    title=(t "manage-ministers")
    closeModal=(action "showEditingMandateeForm")
  }}
    {{utils/manage-mandatees closeModal=(action "showEditingMandateeForm")}}
  {{/web-components/vl-modal}}
{{/if}}
{{#if isManagingAlerts}}
  {{utils/manage-alerts isManagingAlerts=isManagingAlerts}}
{{/if}}
{{#if isManagingCaseTypes}}
  {{utils/model-manager
    modalTitle=(t "manage-case-types")
    modelName="case-type"
    close=(action "showCaseTypesManagementForm")
  }}
{{/if}}
{{#if isManagingUsers}}
  {{utils/user-management-interface
    modalTitle=(t "manage-user-roles")
    close=(action "showUserManagementInterface")
  }}
{{/if}}
{{#if isManagingSubcaseTypes}}
  {{utils/model-manager
    modalTitle=(t "manage-subcase-types")
    modelName="subcase-type"
    close=(action "showSubcaseTypesManagementForm")
  }}
{{/if}}