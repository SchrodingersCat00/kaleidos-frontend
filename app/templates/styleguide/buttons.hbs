<div class="vlc-kitchensink-sample">
  <h2>Narrow buttons</h2>
  <div class="vlc-kitchensink-sample">
    <button class="vl-button vl-button--narrow">Primary button</button>
    <button class="vl-button vl-button--secondary vl-button--narrow">Secondary button</button>
    <button class="vl-button vl-button--tertiary vl-button--narrow">Tertiary button</button>
  </div>

  <h2>Wide buttons</h2>
  <div class="vlc-kitchensink-sample">
    <button class="vl-button vl-button--wide">Primary button</button>
    <button class="vl-button vl-button--secondary vl-button--wide">Secondary button</button>
    <button class="vl-button vl-button--tertiary vl-button--wide">Tertiary button</button>
  </div>

  <h2>Buttons</h2>
  <div class="vlc-kitchensink-sample">
    <button class="vl-button vl-button--disabled">Disabled button</button>
    <button class="vl-button vl-button--block">Block button</button>
    <button class="vl-button vl-button--error ">Error button</button>
    <button class="vl-button vl-button--reset ">Reset button</button>
  </div>

  <h2>Icon buttons</h2>
  <div class="vlc-kitchensink-sample">
    <button type="button" class="vl-button  vl-button--icon">
      <i class="vl-vi vl-vi-cross vl-button__icon" aria-hidden="true"></i>
    </button>
    <button type="button" class="vl-button  vl-button--icon vl-button-icon--error">
      <i class="vl-vi vl-vi-cross vl-button__icon" aria-hidden="true"></i>
    </button>
  </div>

  <h2>Link buttons</h2>
  <div class="vlc-kitchensink-sample">
    <button type="button" class="vl-button vl-button--link">Link button</button>
    <button type="button" class="vl-button vl-button--link-muted">Link muted button</button>
  </div>
  <h2>Toggle button</h2>
  <div class="vlc-kitchensink-sample">
    <WebComponents::VlToggle></WebComponents::VlToggle>
  </div>
</div>
