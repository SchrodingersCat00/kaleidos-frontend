    <ChangesAlert @message="The document has changed!"></ChangesAlert>
  </div>
  <h2>Checkbox</h2>
  <div class="vlc-kitchensink__sample">
    <WebComponents::VlCheckbox @label="label"></WebComponents::VlCheckbox>
  </div>
  <h2>Datepicker</h2>
  <div class="vlc-kitchensink__sample">
    <WebComponents::VlDatepicker></WebComponents::VlDatepicker>
  </div>
  <h2>Document</h2>
  <div class="vlc-kitchensink__sample">
    <WebComponents::VlDocument></WebComponents::VlDocument>
  </div>
  <h2>Forms</h2>
  <div class="vlc-kitchensink__sample">
    <h4>Message</h4>
    <WebComponents::VlFormMessage @message="message example"></WebComponents::VlFormMessage>
    <h4>Label</h4>
    <WebComponents::VlFormLabel @value="label example"></WebComponents::VlFormLabel>
    <h4>Input</h4>
    <WebComponents::VlFormInput></WebComponents::VlFormInput>
  </div>
</div>