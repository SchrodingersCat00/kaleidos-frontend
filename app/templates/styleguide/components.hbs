<div class="vlc-kitchensink__sample">
  <h2>Alerts</h2>
  <div class="vlc-kitchensink__sample">
    <h3>Loading</h3>
    <WebComponents::VlAlert @type="loading"></WebComponents::VlAlert>
    <h3>Closeable</h3>
    <WebComponents::VlAlert @closeable="false"></WebComponents::VlAlert>
    <h3>With title</h3>
