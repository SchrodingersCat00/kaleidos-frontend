<div class="vl-u-spacer-extended-l">
  {{#utils/agendaitem-table
    model=model
    sort=sort
    page=page
    filter=filter
    size=size
    columns=columns as |row|
  }}
    {{#if (is-pending row.decisions)}}
      {{web-components/vl-loader text="De beslissingen worden geladen.."}}
    {{else}}
      <div class="vl-action-group vl-action-group--align-left">
        <button
          class="vl-button vl-button--tertiary vl-button--narrow"
          {{action "addDecision" row row.decisions}}
        >
          Voeg beslissing toe
        </button>
      </div>
      {{#each (await row.decisions) as |decision|}}
        {{agenda/agendaitem/agendaitem-decision
          subcase=(await row.subcase)
          decision=decision
          agendaitem=row
        }}
      {{/each}}
    {{/if}}
  {{/utils/agendaitem-table}}
</div>
{{outlet}}