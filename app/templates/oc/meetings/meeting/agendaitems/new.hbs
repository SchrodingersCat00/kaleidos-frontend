{{#web-components/vl-modal
  isOverlay=true
  title=(t "new-agendaitem")
  closeModal=(action "cancel")
}}
  <div class="vl-modal-dialog__content">
    <div class="vlc-input-field-block">
      <div class="vl-grid vl-grid--is-stacked">
        <div class="vl-col--6-12">
          <div class="vlc-input-field-block">
            {{web-components/vl-form-label value=(t "oc-priority")}}
            {{web-components/vl-form-input width="4" value=(mut model.priority)
            }}
          </div>
        </div>
        <div class="vl-col--6-12">
          <div class="vlc-input-field-block">
            {{web-components/vl-form-label value=(t "oc-sub-priority")}}
            {{web-components/vl-form-input
              width="4"
              value=(mut model.subPriority)
            }}
          </div>
        </div>
      </div>
    </div>
    <div class="vlc-input-field-block">
      {{web-components/vl-form-label value=(t "case")}}
      {{web-components/vl-form-input width="4" value=(mut caseIdentifier)}}
    </div>
    <div class="vlc-input-field-block">
      {{web-components/vl-form-label value=(t "submitter")}}
      {{#power-select-multiple
        options=governmentBodies
        searchField="name"
        selected=model.submitters
        class="vl-form__input vl-col--4-4"
        tagName="div"
        onchange=(action "updateGovernmentBodies") as |governmentBody|
      }}
        {{governmentBody.name}}
      {{/power-select-multiple}}
    </div>
    <div class="vlc-input-field-block">
      {{web-components/vl-form-label value=(t "subject")}}
      {{textarea
        rows="3"
        class="vl-textarea vl-textarea--block"
        value=(mut model.subject)
      }}
    </div>
  </div>
  {{web-components/vl-modal-footer
    isLoading=isLoading
    cancelButtonText=(t "cancel")
    saveButtonText=(t "add")
    cancelAction=(action "cancel")
    saveAction=(action "save")
  }}
{{/web-components/vl-modal}}