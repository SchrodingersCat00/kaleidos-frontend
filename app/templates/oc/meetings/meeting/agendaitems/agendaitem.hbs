  <div class="vlc-scroll-wrapper__body">
    <div class="vl-u-spacer-extended">
      <div class="vlc-container">
        <div class="vl-u-spacer--small">
          <div class="vl-action-group vl-action-group--align-right">
            {{#if (or isAdmin isEditor)}}
                {{agenda/agendaitem/agendaitem-controls
                  agendaitem=agendaitem
                  currentAgenda=currentAgenda
                  lastDefiniteAgenda=lastDefiniteAgenda
                }}
            {{/if}}
          </div>
          <div class="vl-u-spacer-extended-bottom-l">
            <div class="vl-u-spacer-extended-bottom-s">
              <h4 class="vl-title vl-title--h4">
                {{model.subject}}
              </h4>
            </div>
            <div class="vlc-hr"></div>
            <div class="vl-u-spacer-extended-bottom-s">
              <h4 class="vl-title vl-title--h4">
                Notificatie
              </h4>
              {{#if model.notification}}
                {{oc/oc-file
                  model=model.notification
                }}
              {{else}}
                <div class="vl-u-spacer-extended-top-s">
                  {{web-components/vl-alert message="Nog geen notificatie beschikbaar"}}
                </div>
              {{/if}}
            </div>
            <div class="vl-u-spacer-extended-bottom-s">
              <h4 class="vl-title vl-title--h4">
                Documenten
              </h4>
              {{#if model.documents}}
                {{#each model.documents as |file|}}
                  {{oc/oc-file
                    model=file
                  }}
                {{/each}}
              {{else}}
                <div class="vl-u-spacer-extended-top-s">
                  {{web-components/vl-alert message="Geen documenten beschikbaar"}}
                </div>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>